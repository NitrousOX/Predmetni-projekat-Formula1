<Window x:Class="Predmetni_projekat_Formula1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Predmetni_projekat_Formula1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Proizvodjaci">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TreeView Grid.Column="0" Name="treeView1" ItemsSource="{Binding}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type local:Drzava}" ItemsSource="{Binding Proizvodjaci}">
                                <TextBlock Text="{Binding Naziv}" />
                            </HierarchicalDataTemplate>
                            <DataTemplate DataType="{x:Type local:Proizvodjac}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Naziv}" VerticalAlignment="Center"/>
                                    <TextBlock Text="   "/>
                                    <Image Source="{Binding Source}" Width="35" Height="35" />
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                    <Image Grid.Column="1" Source="/Slike/Evropa.JPG" Margin="4"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
